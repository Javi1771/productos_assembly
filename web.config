<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="httpPlatformHandler"
           path="*"
           verb="*"
           modules="httpPlatformHandler"
           resourceType="Unspecified" />
    </handlers>

    <httpPlatform
      processPath="D:\node.js\node.exe"
      arguments="&quot;D:\Proyectos personales\productos_assembly\node_modules\next\dist\bin\next&quot; start -p %HTTP_PLATFORM_PORT%"
      startupTimeLimit="180"
      processesPerApplication="1"
      stdoutLogEnabled="true"
      stdoutLogFile="D:\Proyectos personales\productos_assembly\logs\stdout"
      rapidFailsPerMinute="10"
      requestTimeout="00:05:00">
      <environmentVariables>
        <environmentVariable name="NODE_ENV" value="production" />
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="HOSTNAME" value="127.0.0.1" />
        <!-- Por si el AppPool no ve la carpeta de Node, aÃ±ade su ruta al PATH -->
        <environmentVariable name="Path" value="D:\node.js;%Path%" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>

